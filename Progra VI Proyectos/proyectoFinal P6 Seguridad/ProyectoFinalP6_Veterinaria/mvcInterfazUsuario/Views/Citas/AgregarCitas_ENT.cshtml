        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar", "listarCitas_ENT")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
